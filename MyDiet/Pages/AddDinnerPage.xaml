<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDiet.Pages.AddDinnerPage"
             BackgroundColor="#F4F5FC"
             Title="AddDinnerPage">
    <VerticalStackLayout Padding="30,70" Spacing="15">

        <Frame CornerRadius="5" BackgroundColor="#FFFFFF" HeightRequest="70" Margin="0,20,0,0" >
            <StackLayout>
                <Entry x:Name="Food" Placeholder="Dinner"
         TextColor="#333333" FontSize="16" HeightRequest="40"/>
            </StackLayout>
        </Frame>

        <Frame CornerRadius="5" BackgroundColor="#FFFFFF" HeightRequest="70" Margin="0,20,0,0" >
            <StackLayout>
                <Entry x:Name="CalorieCount" Placeholder="Calorie count" Keyboard="Numeric"
       TextColor="#333333" FontSize="16" HeightRequest="40"/>
            </StackLayout>
        </Frame>

        <StackLayout HorizontalOptions="FillAndExpand">
            <Button x:Name="saveButton" BackgroundColor="#7266DC" Text="Save" VerticalOptions="CenterAndExpand" HeightRequest="60" WidthRequest="110" Clicked="SaveRecord"/>
        </StackLayout>


    </VerticalStackLayout>
</ContentPage>