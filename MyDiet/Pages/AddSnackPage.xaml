<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDiet.Pages.AddSnackPage"
             Title="Add Snack">
    <VerticalStackLayout Padding="30,70" Spacing="15">

        <Frame 
            CornerRadius="5"
            BackgroundColor="#FFFFFF"
            HeightRequest="70">
            <StackLayout>
                <Picker x:Name="FoodPicker"
                Title="Select a snack"
                TitleColor="Gray"
                VerticalOptions="Center"
                HorizontalOptions="FillAndExpand"
                FontSize="16"
                TextColor="#333333"
                ItemsSource="{Binding FoodOptions}"
                SelectedItem="{Binding SelectedFood}" />
            </StackLayout>
        </Frame>

        <Frame CornerRadius="5" BackgroundColor="#FFFFFF" HeightRequest="70" Margin="0,20,0,0" >
            <StackLayout>
                <Entry x:Name="CalorieCount" Placeholder="Calorie count" Keyboard="Numeric"
               TextColor="#333333" FontSize="16" HeightRequest="40"/>
            </StackLayout>
        </Frame>

        <StackLayout HorizontalOptions="FillAndExpand">
            <Button x:Name="saveButton" Text="Save" VerticalOptions="CenterAndExpand" HeightRequest="60" WidthRequest="110" Clicked="SaveRecord"/>
        </StackLayout>
        

    </VerticalStackLayout>
</ContentPage>